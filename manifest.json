{
  "manifest_version": 2,
  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_title": "Download Image",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/jszip.min.js",
        "js/jszip-utils.min.js",
        "js/FileSaver.min.js",
        "js/content-script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}